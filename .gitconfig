[core]
	editor = nvim
	quotepath = off
	pager = delta
[user]
	email = hey@ewen.works
	name = Ewen Le Bihan
[init]
	defaultBranch = main
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[interactive]
	diffFilter = delta --color-only
[delta]
	line-numbers = true
	syntax-theme = OneHalfDark
[difftool "diffpdf"]
	cmd = diff-pdf --view \"$LOCAL\" \"$REMOTE\"
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[diff]
	tool = difftastic
[difftool]
	prompt = false

[diff "odp"]
	textconv=/home/ewen/.local/bin/odp2txt
[pager]
	difftool = true
[alias]
	dft = difftool
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[pull]
	rebase = false

#!/usr/bin/env fish

set programs (grep -o '^\s*case \w*$' (status filename) | cut -d' ' -f2)

set program (echo -e $programs | rofi -dmenu -p "edit dotfile for" -sep ' ') 


set CONFIG "$HOME/.config"

switch (echo $program | string trim)
	case nvim
		neovide-kbd-fix "$CONFIG/nvim/init.vim"
	case fish
		neovide-kbd-fix "$CONFIG/fish/config.fish"
	case rofi
		neovide-kbd-fix "$CONFIG/rofi/theme.rasi"
	case polybar
		neovide-kbd-fix "$CONFIG/polybar/config.ini"
	case i3
		neovide-kbd-fix "$CONFIG/i3/config"
	case dunst
		neovide-kbd-fix "$CONFIG/dunst/dunstrc"
	case ranger
		neovide-kbd-fix "$CONFIG/ranger/rc.conf"
	case picom
		neovide-kbd-fix "$CONFIG/picom.conf"
	case kitty
		echo $CONFIG
		ls $CONFIG/kitty
		neovide-kbd-fix "$CONFIG/kitty/kitty.conf"
	case '*'
		notify-send "dotfile for $program not found"
end
